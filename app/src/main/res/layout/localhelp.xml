<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLocalHelp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/roundcorner_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/idGardener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="Gardener"
            android:src="@drawable/gardener"
            android:visibility="visible"
            tools:srcCompat="@drawable/gardener" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLocalHelpNr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="start|top"
            android:text="(1/5)"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/txtLocalHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="start|top"
            android:text="Balayer l'écran de droite à gauche pour avancer d'un jour."
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkNoHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/neplusaff"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>