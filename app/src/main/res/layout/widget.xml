<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/roundcornerblack"
    android:orientation="horizontal" >
<ImageView
    android:id="@+id/imageLuneWidget"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:contentDescription="@string/desc"
    android:src="@drawable/nlune24" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
   <TextView
        android:id="@+id/coucher"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text="--:--"
        android:textColor="#aff2ea"
       android:typeface="monospace"
       android:shadowColor="#aff2ea"
       android:shadowDx="1"
       android:shadowDy="1"
       android:shadowRadius="1.5"
       >
    </TextView>

    <TextView
        android:id="@+id/lever"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text="--:--"
        android:textColor="#aff2ea"
        android:layout_marginTop="10dp"
        android:typeface="monospace"
        android:shadowColor="#aff2ea"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        >
    </TextView>
</LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
            <ImageView
                android:id="@+id/imageJour1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/racine84x84" />
            <ImageView
                android:id="@+id/flechemontdesc"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:src="@drawable/flechemontante"
                android:layout_marginTop="2dp" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/descevt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#aff2ea"
            android:text="-----"
            android:typeface="monospace"
            android:shadowColor="#aff2ea"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"/>
            <TextView
                android:id="@+id/heureevt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#aff2ea"
                android:layout_marginTop="8dp"
                android:text="--:--"
                android:typeface="monospace"
                android:shadowColor="#aff2ea"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.5"/>
    </LinearLayout>
</LinearLayout>
